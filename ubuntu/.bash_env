if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH:"
fi

if [ -d "$HOME/Softdev/android/sdk" ] ; then
    export ANDROID_HOME=$HOME/Softdev/android/sdk
    PATH="${ANDROID_HOME}/tools:${PATH}"
    PATH="${ANDROID_HOME}/platform-tools:${PATH}"
fi

if [ -d "$HOME/Softdev/android/sdk/platform-tools" ] ; then
    PATH="$HOME/Softdev/android/sdk/platform-tools:$PATH"
fi

# export USE_CCACHE=1
